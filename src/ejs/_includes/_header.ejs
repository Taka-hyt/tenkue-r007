<script>
  $('.hamburger-line').on('click',function(){
    if ( $(this).hasClass('active') ) {
      $(this).removeClass('active');
      $('.gloval-nav').addClass('close').removeClass('open');
    }
    else {
      $(this).addClass('active');
      $('.gloval-nav').addClass('open').removeClass('close'); 
    }
  });
</script>